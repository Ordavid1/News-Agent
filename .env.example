# Development Environment Variables
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
TEST_MODE=true

# Database Configuration
USE_LOCAL_DB=true

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production
SESSION_SECRET=your-session-secret-change-in-production
TOKEN_ENCRYPTION_KEY=your-token-encryption-key

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLISHABLE_KEY=your-supabase-anon-key
SUPABASE_SECRET_KEY=your-supabase-service-role-key

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI Configuration (required)
OPENAI_API_KEY=sk-your-openai-api-key

# News API Keys
NEWSAPI_KEY=your-newsapi-key
GNEWS_API_KEY=your-gnews-api-key
GOOGLE_CSE_API_KEY=your-google-cse-api-key
GOOGLE_CSE_ID=your-google-cse-id

# Automation
AUTOMATION_ENABLED=true

# Twitter API
TWITTER_PREMIUM=true
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password
REDDIT_SUBREDDIT=your-subreddit-name

# TikTok API (if using RapidAPI)
TIKTOK_API_KEY=your-tiktok-api-key
ENABLE_TIKTOK_SCRAPING=false

# Additional APIs
SERPAPI_KEY=your-serpapi-key
YOUTUBE_API_KEY=your-youtube-api-key
INSTAGRAM_API_KEY=your-instagram-api-key

# LinkedIn API
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_AUTHOR_ID=your-linkedin-author-id

# Facebook API (for Page publishing)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_PAGE_ID=your-facebook-page-id
FACEBOOK_PAGE_ACCESS_TOKEN=your-facebook-page-access-token

# Telegram Bot API
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Enable/disable sources
ENABLE_TWITTER_TRENDS=true
ENABLE_REDDIT_TRENDS=true
ENABLE_GOOGLE_TRENDS=true
ENABLE_TIKTOK_SCRAPING=false

# Trend Reuse Configuration
TREND_USAGE_WINDOW=24
TREND_UNUSED_WINDOW=12
TREND_MAX_USAGE=2
TREND_MAX_DAILY=6
TREND_PENALTY_MILD=0.9
TREND_PENALTY_MOD=0.7
TREND_PENALTY_SEVERE=0.4
TREND_VOLUME_BOOST=1.2
TREND_VOLUME_THRESHOLD=10000
TREND_VIRAL_HANDLING=true
TREND_VIRAL_THRESHOLD=50000

# Trend configuration
MIN_TREND_SOURCES=1
MIN_TREND_CONFIDENCE=0.5
TWITTER_RATE_LIMIT_BUFFER=100
