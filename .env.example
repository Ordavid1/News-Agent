# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
USE_LOCAL_DB=true
# For production, set these:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# FIRESTORE_PROJECT_ID=your-project-id
# FIRESTORE_DATABASE_ID=your-database-id

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_IDS_STARTER=price_starter_id
STRIPE_PRICE_IDS_GROWTH=price_growth_id
STRIPE_PRICE_IDS_PROFESSIONAL=price_professional_id
STRIPE_PRICE_IDS_BUSINESS=price_business_id

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# News APIs (for trend analysis)
NEWSAPI_KEY=your-newsapi-key
GNEWS_API_KEY=your-gnews-api-key
GOOGLE_CSE_API_KEY=your-google-custom-search-api-key
GOOGLE_CSE_ID=your-google-custom-search-engine-id

# Social Media Platforms
# Twitter
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# LinkedIn
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_AUTHOR_ID=your-linkedin-author-id

# Reddit
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password
REDDIT_USER_AGENT=YourApp/1.0 by YourRedditUsername

# Automation Settings
AUTOMATION_ENABLED=true
DEFAULT_POSTS_PER_DAY=5
MAX_RETRIES=3

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=AIPostGen <noreply@aipostgen.com>

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=app.log