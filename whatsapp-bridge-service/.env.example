# WhatsApp Bridge Service Configuration

# Server
PORT=10000

# API Authentication - key required for all requests from SaaS app
API_KEY=your-api-key-here

# Baileys Auth Store - path to persist WhatsApp session credentials
AUTH_STORE_PATH=./auth_store

# SaaS App Integration - for forwarding verification code webhooks
SAAS_WEBHOOK_URL=http://localhost:3000
SAAS_WEBHOOK_SECRET=your-webhook-secret-here

# Rate Limiting
MESSAGES_PER_MINUTE=15
MESSAGES_PER_HOUR=100
MIN_MESSAGE_DELAY_MS=1000
MAX_MESSAGE_DELAY_MS=3000

# Circuit Breaker
MAX_RECONNECT_RETRIES=5
CIRCUIT_RESET_TIMEOUT_MS=300000

# Logging
LOG_LEVEL=info
